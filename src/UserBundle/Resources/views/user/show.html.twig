{% extends '@User/layout.html.twig' %}

{% block body %}
    <h1>Détail de l'utilisateur</h1>

    <table class="table table-bordered table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Nom d'utilisateur</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>Mot de passe</th>
            <td>{{ user.password }}</td>
        </tr>
        <tr>
            <th>Salt</th>
            <td>{{ user.salt }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{% if user.roles %}{{ user.roles|join(', ') }}{% endif %}</td>
        </tr>
        </tbody>
    </table>
    <div class="btn-group">
        <a class="btn btn-default" href="{{ path('user_list') }}"><i class="fa fa-arrow-left"></i> Retour à la liste</a>
        <a class="btn btn-primary" href="{{ path('user_edit', { 'id': user.id }) }}"><i class="fa fa-edit"></i> Editer l'utilisateur</a>
    </div>
    <br>
    <br>
    {{ form_start(delete_form) }}
    <button class="btn btn-danger" type="submit"><i class="fa fa-remove"></i> Supprimer l'utilisateur</button>
    {{ form_end(delete_form) }}
{% endblock %}
