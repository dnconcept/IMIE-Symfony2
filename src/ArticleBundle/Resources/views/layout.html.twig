{% extends "::base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("bundles/article/css/app.css") }}">
{% endblock %}


{% block body %}
    <h2>Article Bundle</h2>
    <nav class="navbar navbar-default navbar-bundle">
        <div class="container-fluid">
            <!-- Collect the nav links, forms, and other content for toggling -->
            <ul class="nav navbar-nav">
                <li>
                    <a href="{{ path("article_homepage") }}"><i class="fa fa-home"></i> Bundle</a>
                </li>
                <li>
                    <a href="{{ path("article_list") }}"><i class="fa fa-list"></i> Liste des articles</a>
                </li>
                <li>
                    <a href="{{ path("article_add") }}"><i class="fa fa-plus"></i> Ajouter un article</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="article-bundle">
        {% block page %}{% endblock %}
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset("js/app.js") }}"></script>
{% endblock %}